<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FocFirstYearActivity">

    <RelativeLayout
        android:id="@+id/rl_3"
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="343dp"
            android:layout_height="110dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            app:srcCompat="@drawable/sliit" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_2"
        android:layout_width="402dp"
        android:layout_height="354dp"
        app:layout_constraintEnd_toEndOf="@+id/rl_1"
        app:layout_constraintTop_toBottomOf="@+id/rl_1">


        <Button
            android:id="@+id/btnICS"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/ooc"
            android:layout_marginBottom="138dp"
            android:background="@drawable/ic_foc"
            android:onClick="onClickics"
            android:text="ICS"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/ooc"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="99dp"
            android:background="@drawable/ic_foc"
            android:onClick="onClickmit"
            android:text="MIT"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnIP"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/btnICS"
            android:layout_marginBottom="68dp"
            android:background="@drawable/ic_foc"
            android:onClick="onClickip"
            android:text="IP"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="273dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/ooc"
            android:layout_marginTop="19dp"
            android:text="Faculty Of Computing - 1 Year  1 Semester"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>



</LinearLayout>